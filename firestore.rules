rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== USERS ====================
    // Kullanicilar kendi profillerini okuyabilir/yazabilir
    // Diger kullanicilar sadece okuyabilir
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Kullanicinin matches alt koleksiyonu
      match /matches/{matchId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ==================== ACTIONS (Swipes) ====================
    // Giris yapmis kullanicilar swipe yapabilir
    match /actions/{actionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ==================== MATCHES ====================
    // Eslesmeler - sadece eslesmedeki kullanicilar erisebilir
    match /matches/{matchId} {
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.users;
      allow write: if request.auth != null;
    }

    // ==================== CHATS ====================
    // Sohbetler - sadece sohbetteki kullanicilar erisebilir
    match /chats/{chatId} {
      // Okuma: Kullanici sohbetin 'users' array'inde olmali
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.users;

      // Yazma: Kullanici sohbetin 'users' array'inde olmali
      // Veya yeni sohbet olusturuluyorsa, kullanici 'users' array'inde olmali
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.users;

      allow update: if request.auth != null &&
        request.auth.uid in resource.data.users;

      allow delete: if request.auth != null &&
        request.auth.uid in resource.data.users;

      // ==================== MESSAGES (Alt Koleksiyon) ====================
      // Mesajlar - ust sohbete erisimi olan kullanicilar erisebilir
      match /messages/{messageId} {
        allow read: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;

        allow create: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users &&
          request.resource.data.senderId == request.auth.uid;

        allow update, delete: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
      }
    }
  }
}
