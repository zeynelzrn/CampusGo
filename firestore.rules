rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== HELPER FUNCTIONS ====================
    // Kullanicinin admin olup olmadigini kontrol et
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // ==================== USERS ====================
    // Kullanicilar kendi profillerini okuyabilir/yazabilir
    // Diger kullanicilar sadece okuyabilir
    // ONEMLI: isAdmin ve isBanned alanlari sadece adminler tarafindan degistirilebilir
    match /users/{userId} {
      allow read: if request.auth != null;

      // Normal kullanici yazma izni: kendi profili + isAdmin/isBanned degistiremez
      allow create: if request.auth != null && request.auth.uid == userId &&
                    !('isAdmin' in request.resource.data) &&
                    !('isBanned' in request.resource.data);

      allow update: if request.auth != null && (
        // Kendi profilini guncelle (isAdmin/isBanned haric)
        (request.auth.uid == userId &&
         (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isBanned'])))
        ||
        // Admin herkesin isAdmin/isBanned alanlarini guncelleyebilir
        isAdmin()
      );

      allow delete: if request.auth != null && request.auth.uid == userId;

      // Kullanicinin matches alt koleksiyonu
      match /matches/{matchId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ==================== REPORTS (Sikayet Sistemi) ====================
    // Herkes sikayet olusturabilir, sadece adminler okuyabilir/guncelleyebilir
    match /reports/{reportId} {
      // Herkes sikayet olusturabilir (kendi adina)
      allow create: if request.auth != null &&
                    request.resource.data.reporterId == request.auth.uid;

      // Sadece adminler okuyabilir ve guncelleyebilir
      allow read, update: if isAdmin();

      // Silme izni yok (audit trail icin)
      allow delete: if false;
    }

    // ==================== ACTIONS (Swipes) ====================
    // Giris yapmis kullanicilar swipe yapabilir
    match /actions/{actionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ==================== MATCHES ====================
    // Eslesmeler - sadece eslesmedeki kullanicilar erisebilir
    match /matches/{matchId} {
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.users;
      allow write: if request.auth != null;
    }

    // ==================== CHATS ====================
    // Sohbetler - sadece sohbetteki kullanicilar erisebilir
    match /chats/{chatId} {
      // Okuma: Kullanici sohbetin 'users' array'inde olmali
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.users;

      // Yazma: Kullanici sohbetin 'users' array'inde olmali
      // Veya yeni sohbet olusturuluyorsa, kullanici 'users' array'inde olmali
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.users;

      allow update: if request.auth != null &&
        request.auth.uid in resource.data.users;

      allow delete: if request.auth != null &&
        request.auth.uid in resource.data.users;

      // ==================== MESSAGES (Alt Koleksiyon) ====================
      // Mesajlar - ust sohbete erisimi olan kullanicilar erisebilir
      match /messages/{messageId} {
        allow read: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;

        allow create: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users &&
          request.resource.data.senderId == request.auth.uid;

        allow update, delete: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.users;
      }
    }
  }
}
