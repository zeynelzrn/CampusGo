rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== COLLECTION GROUP ESNEKLIGI ====================
    // Koleksiyon grup sorgulari (ornegin collectionGroup('users')) icin
    // Herhangi bir 'users' koleksiyonundaki dokumanlara giris yapmis kullanicilar okuyabilir
    match /{path=**}/users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ==================== HELPER FUNCTIONS ====================
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // test- ile baslayan e-postalar test hesabi; kisitlamalara takilmaz
    function isTestUser() {
      return request.auth != null &&
             request.auth.token.email != null &&
             request.auth.token.email.matches('^[tT][eE][sS][tT]-.*');
    }

    // Dokumanda kullanici users listesinde veya fromUserId/toUserId alanlarinda mi?
    function isActorInDoc(docData) {
      return request.auth.uid in docData.get('users', []) ||
             docData.get('fromUserId') == request.auth.uid ||
             docData.get('toUserId') == request.auth.uid;
    }

    // ==================== USERS (root collection) ====================
    // Giris yapmis her kullanici users koleksiyonundaki TUM dokumanlari okuyabilir (keşfetme/istekler filtreleme icin)
    // Yazma: sadece kendi UID'sine sahip dokumana
    match /users/{userId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null && request.auth.uid == userId &&
                    !('isAdmin' in request.resource.data) &&
                    !('isBanned' in request.resource.data);

      allow update: if request.auth != null && (
        (request.auth.uid == userId &&
         (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isBanned'])))
        || isAdmin()
      );

      allow delete: if request.auth != null && request.auth.uid == userId;

      match /matches/{matchId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // İstekler sayfasi watchAllRestrictedUserIds icin gerekli (engellenen/engelleyen listesi)
      match /blocked_users/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /blocked_by/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null;
      }
    }

    // ==================== REPORTS (Sikayet Sistemi) ====================
    match /reports/{reportId} {
      allow create: if request.auth != null &&
                    request.resource.data.reporterId == request.auth.uid;
      allow read, update: if isAdmin();
      allow delete: if false;
    }

    // ==================== ACTIONS (Swipes) ====================
    // users listesinde veya fromUserId/toUserId'de olan tam erisim; test hesaplari kisitlamaya takilmaz
    match /actions/{actionId} {
      allow read: if request.auth != null && (isTestUser() || isActorInDoc(resource.data));
      allow create: if request.auth != null && (
        isTestUser() ||
        request.resource.data.get('fromUserId') == request.auth.uid ||
        request.resource.data.get('toUserId') == request.auth.uid ||
        request.auth.uid in request.resource.data.get('users', [])
      );
      allow update, delete: if request.auth != null && (isTestUser() || isActorInDoc(resource.data));
    }

    // ==================== MATCHES (root-level) ====================
    match /matches/{matchId} {
      allow read: if request.auth != null && (isTestUser() || isActorInDoc(resource.data));
      allow create: if request.auth != null && (
        isTestUser() ||
        request.auth.uid in request.resource.data.get('users', []) ||
        request.resource.data.get('fromUserId') == request.auth.uid ||
        request.resource.data.get('toUserId') == request.auth.uid
      );
      allow update, delete: if request.auth != null && (isTestUser() || isActorInDoc(resource.data));
    }

    // ==================== CHATS ====================
    match /chats/{chatId} {
      allow read: if request.auth != null && (
        isTestUser() ||
        request.auth.uid in resource.data.get('users', [])
      );
      allow create: if request.auth != null && (
        isTestUser() ||
        request.auth.uid in request.resource.data.get('users', [])
      );
      allow update, delete: if request.auth != null && (
        isTestUser() ||
        request.auth.uid in resource.data.get('users', [])
      );

      match /messages/{messageId} {
        allow read: if request.auth != null && (
          isTestUser() ||
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.get('users', [])
        );
        allow create: if request.auth != null && (
          isTestUser() ||
          (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.get('users', []) &&
           request.resource.data.senderId == request.auth.uid)
        );
        allow update, delete: if request.auth != null && (
          isTestUser() ||
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.get('users', [])
        );
      }
    }
  }
}
